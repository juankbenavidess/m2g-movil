{
	"info": {
		"_postman_id": "meet2go-collection",
		"name": "Meet2Go Backend API",
		"description": "Colección de endpoints para el backend de Meet2Go - Sistema de gestión de eventos y tickets",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('token', response.data.token);",
									"    pm.environment.set('userId', response.data.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"nuevo@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Usuario Nuevo\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/register",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"register"
							]
						},
						"description": "Registrar un nuevo usuario en el sistema"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    pm.environment.set('token', response.data.token);",
									"    pm.environment.set('userId', response.data.user.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/login",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Iniciar sesión con credenciales existentes.\n\nCredenciales de prueba:\n- Email: user@example.com\n- Password: password123"
					},
					"response": []
				}
			],
			"description": "Endpoints de autenticación (registro y login)"
		},
		{
			"name": "Events",
			"item": [
				{
					"name": "Get All Events",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/events",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"events"
							]
						},
						"description": "Obtener lista completa de eventos disponibles. Requiere autenticación."
					},
					"response": []
				}
			],
			"description": "Endpoints para gestión de eventos"
		},
		{
			"name": "Tickets",
			"item": [
				{
					"name": "Purchase Ticket",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"eventId\": \"event-1\",\n  \"quantity\": 2\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/tickets/purchase",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tickets",
								"purchase"
							]
						},
						"description": "Comprar tickets para un evento. Requiere autenticación.\n\nEventos disponibles:\n- event-1: Campanazo Navideño: Pan de Dulce (Guayaquil)\n- event-2: La Cotorrisa en Quito\n- event-3: Nicola Cruz con Silvia Ponce (Quito)\n\nCantidad: Entre 1 y 10 tickets"
					},
					"response": []
				},
				{
					"name": "Get My Tickets",
					"request": {
						"auth": {
							"type": "bearer",
							"bearer": [
								{
									"key": "token",
									"value": "{{token}}",
									"type": "string"
								}
							]
						},
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/tickets/my-tickets",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"tickets",
								"my-tickets"
							]
						},
						"description": "Obtener lista de tickets comprados por el usuario autenticado"
					},
					"response": []
				}
			],
			"description": "Endpoints para gestión de tickets"
		},
		{
			"name": "Health Check",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/health",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Verificar que el servidor está funcionando correctamente"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000",
			"type": "string"
		}
	]
}